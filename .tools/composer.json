{
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.64",
    "phpspec/phpspec": "^7.5",
    "phpstan/phpstan": "^1.12.6",
    "phpstan/phpstan-doctrine": "^1.5.2",
    "phpstan/phpstan-webmozart-assert": "^1.2.11",
    "phpmd/phpmd": "^2.15"
  },
  "scripts": {
    "phpcs": "PHP_CS_FIXER_IGNORE_ENV=1 tools/vendor/bin/php-cs-fixer fix --using-cache=no",
    "phpstan": "phpstan analyse -c phpstan.neon src/",
    "phpmd": "phpmd --exclude Migrations/* src/ ansi phpmd.xml",
    "phpunit": "phpunit",
    "phpspec": "phpspec run"
  }
}
